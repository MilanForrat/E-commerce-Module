{% extends 'base.html.twig' %}
{% block title %}La Fringuerie Française{% endblock%}
{% block body %}
<h1 class="main-header_h1">Bienvenue dans notre boutique en ligne</h1>
<div class="grid-container">
    <div class="main">
        <h3 class="main-header_h3">Découvrez nos meilleures ventes :</h3>
        <div class="grid">
            {% for mainP in productsMain %}
            <div class="card m-2">
                <a href="{{ path('products_detail', {'id': mainP.id}) }}"><img src="{{ asset('images/' ~ mainP.pictureurl) }}" alt="Photo d'un produit, appartenant à la catégorie : {{ mainP.pictureurl }}" class="card-img-top"></a>
                <div class="card-body card-body-index">
                    <a href="{{ path('products_detail', {'id': mainP.id}) }}"><h5 class="card-title card-name">{{ mainP.name }}</h5></a>
                    <p class="text card-text">{{ mainP.subtitle }}</p>
                    <hr>
                    <div class="card-price">
                        {% if mainP.promo %}
                        <div class="text text-warning card-promo_text col-md-6">En promotion !</div>
                        {% endif %}
                        <div class="card-title card-price_number col-md-6">
                            {{ mainP.price | number_format(0, ',', ' ') }} €
                        </div>
                    </div>
                    <div>
                        <!-- pour chacune des catégories dans product.category, je veux que tu m'affiches ... -->
                        <p class="card-categories"><a
                                href="{{ path('categories_details', {id: mainP.category.id} ) }}">#{{ mainP.category }}</a></p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}