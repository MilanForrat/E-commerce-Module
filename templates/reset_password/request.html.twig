{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe - La Fringuerie Française{% endblock %}

{% block body %}
<div class="card col-11 col-sm-6 mx-auto">
    <h1 class="main-header_h1">Réinitialiser votre mot de passe</h1>
    <div class="reset-password-send-email_form col-10">
        {{ form_start(requestForm) }}
        {{ form_row(requestForm.email, {'label': 'Votre adresse email :'}) }}
        <div class="reset-password-send-email_text">
            <small>
                Veuillez entrer votre adresse email afin que nous vous envoyons un lien de réinitialisation de mot de passe.
            </small>
        </div>

        <button class="btn btn-primary btn-sm reset-password-send-email_submit">Envoyer la demande</button>
        {{ form_end(requestForm) }}
    </div>
</div>
{% endblock %}