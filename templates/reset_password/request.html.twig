{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1 class="main-header_h1">Réinitialiser votre mot de passe</h1>
    <div class="reset-password-send-email_form col-10">
        {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div class="reset-password-send-email_text">
            <small>
                Veuillez entrer votre adresse email afin que nous vous envoyons un lien de réinitialisation de mot de passe.
            </small>
        </div>

        <button class="btn btn-primary reset-password-send-email_submit">Envoyer la demande</button>
        {{ form_end(requestForm) }}
    </div>
 
{% endblock %}