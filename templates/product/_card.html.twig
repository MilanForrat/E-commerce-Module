<div class="card">
    <div class="card-container">
                <!-- pour chacune des catégories dans product.category, je veux que tu m'affiches ... -->
        <a href="{{ path('products_detail', {'id': product.id}) }}"><img src="{{ asset('images/' ~ product.pictureurl) }}" alt="Photo d'un produit, appartenant à la catégorie : {{ product.pictureurl }}" class="card-img-top"></a>    
        <div class="card-body">
            <a href="{{ path('products_detail', {'id': product.id}) }}"><h5 class="card-title card-name">{{ product.name }}</h5></a>
            <p class="text card-text">{{ product.subtitle }}</p>
            {% if product.promo %}
            <div class="text text-info card-promo_text col-md-6">En promotion !</div>
            {% endif %}
            <div class="card-title card-price_number">
                {{ product.price | number_format(2, ',', ' ') }} €
            </div>
            <div>
                <p class="card-categories"><a href="{{ path('categories_details', {id: product.category.id} ) }}">#{{ product.category }}</a></p>
            </div>
            <a href="{{ path('add_to_cart', {id: product.id} ) }}" class="btn btn-primary btn-sm"><i class="fas fa-cart-plus"></i> Ajouter au panier</a>
        </div>
    </div>
</div>